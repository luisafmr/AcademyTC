<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/espacioLateralFormulario">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCorte1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/decripcionFormularioIcono"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.9"
                app:srcCompat="@drawable/ic_formulario_corte_24px" />

            <ImageView
                android:id="@+id/imgCorte2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/decripcionFormularioIcono"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_formulario_corte_24px" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/corte1"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgNota1"
                app:layout_constraintStart_toEndOf="@+id/imgCorte1"
                app:layout_constraintTop_toTopOf="@+id/imgNota1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/corte2"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgNota2"
                app:layout_constraintStart_toEndOf="@+id/imgCorte2"
                app:layout_constraintTop_toTopOf="@+id/imgNota2" />

            <EditText
                android:id="@+id/txtPorcentaje1"
                android:layout_width="@dimen/txtAnchoPorcentaje"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/hntPorcentaje"
                android:autofillHints="" tools:targetApi="o" />

            <EditText
                android:id="@+id/txtNota1"
                android:layout_width="@dimen/txtAnchoNota"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/hntNota"
                android:autofillHints="" tools:targetApi="o" />

            <EditText
                android:id="@+id/txtNota2"
                android:layout_width="@dimen/txtAnchoNota"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/hntNota"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_constraintVertical_bias="1.0"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:text="@string/porcentaje"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtPorcentaje1"
                app:layout_constraintEnd_toStartOf="@+id/txtPorcentaje1"
                app:layout_constraintTop_toTopOf="@+id/txtPorcentaje1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="@string/porcentaje"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/txtPorcentaje2"
                app:layout_constraintEnd_toStartOf="@+id/txtPorcentaje2"
                app:layout_constraintTop_toTopOf="@+id/txtPorcentaje2"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imgNota1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtNota1"
                app:layout_constraintEnd_toStartOf="@+id/txtNota1"
                app:layout_constraintTop_toTopOf="@+id/txtNota1"
                app:srcCompat="@drawable/ic_formulario_nota_24px"
                android:contentDescription="@string/decripcionFormularioIcono" />

            <ImageView
                android:id="@+id/imgNota2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtNota2"
                app:layout_constraintEnd_toStartOf="@+id/txtNota2"
                app:layout_constraintTop_toTopOf="@+id/txtNota2"
                app:layout_constraintVertical_bias="0.523"
                app:srcCompat="@drawable/ic_formulario_nota_24px"
                android:contentDescription="@string/decripcionFormularioIcono" />

            <EditText
                android:id="@+id/txtPorcentaje2"
                android:layout_width="@dimen/txtAnchoNota"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/hntPorcentaje"
                app:layout_constraintTop_toBottomOf="@+id/txtPorcentaje1"
                android:autofillHints="" tools:targetApi="o" />

            <EditText
                android:id="@+id/txtPorcentaje3"
                android:layout_width="@dimen/txtAnchoPorcentaje"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/hntPorcentaje"
                app:layout_constraintTop_toBottomOf="@+id/txtPorcentaje2"
                android:autofillHints="" tools:targetApi="o" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="@string/porcentaje"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/txtPorcentaje3"
                app:layout_constraintEnd_toStartOf="@+id/txtPorcentaje3"
                app:layout_constraintTop_toTopOf="@+id/txtPorcentaje3"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/txtNota3"
                android:layout_width="@dimen/txtAnchoNota"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/hntNota"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8"
                app:layout_constraintVertical_bias="1.0"
                tools:targetApi="o" />

            <ImageView
                android:id="@+id/imgNota3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtNota3"
                app:layout_constraintEnd_toStartOf="@+id/txtNota3"
                app:layout_constraintTop_toTopOf="@+id/txtNota3"
                app:layout_constraintVertical_bias="0.571"
                app:srcCompat="@drawable/ic_formulario_nota_24px"
                android:contentDescription="@string/decripcionFormularioIcono" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/corte3"
                app:layout_constraintBottom_toBottomOf="@+id/imgNota3"
                app:layout_constraintStart_toEndOf="@+id/imgCorte3"
                app:layout_constraintTop_toTopOf="@+id/imgNota3" />

            <ImageView
                android:id="@+id/imgCorte3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                app:layout_constraintVertical_bias="0.6"
                app:srcCompat="@drawable/ic_formulario_corte_24px"
                android:contentDescription="@string/decripcionFormularioIcono" />

            <Button
                android:id="@+id/btnPorcentajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/btnGuardar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgNota3"
                android:theme="@style/btnPositivo"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>